import random
def comp_choice():
    options=["snake","water","gun"]
    return random.choice(options)
def winner(user,computer):
    if user==computer:
        return "Its a tie"
    elif(user=="snake" and computer=="water")or(user=="water" and computer=="gun") or (user == "gun" and computer == "snake"):
        return "You win "
    else:
        return "COMPUTER WINS"
def play_game():
    user_choice=input("choose between snake water and gun \n")
    if user_choice not in ["snake","water","gun"]:
        print("Invalid Choice")
        return
    comp_choice_value=comp_choice()
    print(f"Computer chose: {comp_choice_value}")
    result=winner(user_choice,comp_choice_value)
    print(result)
play_game()
    
    
